<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fetch Player JSON Data</title>
</head>
<body>
    <h1>Player Data</h1>
    <ul id="data-list"></ul>

    <script>
        async function fetchData() {
            try {
                const response = await fetch('players.json'); // or the URL to your GitHub raw JSON file
                const data = await response.json();
                const list = document.getElementById('data-list');
                data.forEach(player => {
                    const listItem = document.createElement('li');
                    listItem.textContent = `Name: ${player.name}, Age: ${player.age}, Position: ${player.position}, Club: ${player.club}, Nationality: ${player.nationality}`;
                    list.appendChild(listItem);
                });
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        }

        fetchData();
    </script>
</body>
</html>
